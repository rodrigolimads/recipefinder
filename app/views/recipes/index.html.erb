<h1>List of Recipes</h1>

<table border='1'>
  <tr>
    <th>Icon</th>
    <th>Title</th>
    <th>Social Rank</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr>
      <td><%= link_to image_tag(recipe['image_url'], style: 'width:100px;heigth:100px;'), recipe['source_url']  %></td>
      <td><%= link_to sanitize(recipe['title']), recipe['source_url'] %></td>
      <td><%= recipe['social_rank'] %></td>
    </tr>
  <% end %>
</table>
